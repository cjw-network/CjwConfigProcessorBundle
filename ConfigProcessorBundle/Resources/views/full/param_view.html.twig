{% extends "@CJWConfigProcessor/pagelayout.html.twig" %}

{% block line_template_stylesheets %}
    <link rel="stylesheet" href={{ asset("bundles/cjwconfigprocessor/assets/css/parameter_display.css") }}>
{% endblock %}

{% block list_header %}
    <div class="ez-header">
        <div class="container">
            <ol class="breadcrumb px-4">
                <li class="breadcrumb-item">Admin</li>
                <li class="breadcrumb-item">CJW Config Processing</li>
                <li class="breadcrumb-item active">Parameterlist</li>
            </ol>
            <div class="ez-page-title py-3 px-4">
                <div class="ez-page-title__content-item">
                    <svg class="ez-icon ez-icon-content-type">
                        <use xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#content-type"></use>
                    </svg>
                    <h1 class="ez-page-title__content-name">
                        Parameterlist: Site Access Independent
                    </h1>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block param_content %}
    <div class="param_list tab-content container mt-4 px-5">
        <div class="ez-table-header ez-sticky-container cjw_table_head_with_searchbar">
            <div class="ez-table-header__headline">
                Parameterlist
            </div>
            {% block search_bar %}
                {{ parent() }}
            {% endblock %}
            <div class="m-sub-items__actions">
                <button id="commit_favourites" class="c-action-btn c-action-btn--reveal">
                    <svg class="ez-icon ez-icon--medium-large">
                        <use xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#save"></use>
                    </svg>
                </button>
                <button id="download_button" class="c-action-btn c-action-btn--reveal">
                    <svg class="ez-icon ez-icon--medium-large">
                        <use xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#download"></use>
                    </svg>
                </button>
                <button id="global_open_subtree" class="c-action-btn c-action-btn--reveal">
                    <svg class="ez-icon ez-icon--medium-large">
                        <use xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#copy-subtree"></use>
                    </svg>
                </button>
            </div>
        </div>
        <svg class="ez-icon ez-icon--large" id="loading_circle">
            <use xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#spinner"></use>
        </svg>
        {% if favourites is defined and favourites|length > 0 %}
            <div class="param_list_items dont_display favourite_container">
                <div class="param_list_keys" key="favourites">
                    <span class="param_item_toggle">
                        <svg class="ez-icon ez-icon--small">
                            <use xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#caret-next"></use>
                        </svg>
                    </span>
                    <span>favourites:</span>
                    <button class="parameter_buttons open_subtree">
                        <svg class="ez-icon ez-icon--small">
                            <use xlink:href="/bundles/ezplatformadminui/img/ez-icons.svg#copy-subtree"></use>
                        </svg>
                    </button>
                </div>
                {% include '@CJWConfigProcessor/line/recursive_param_resolution/_recursive_param_resolver.html.twig' ignore missing with {"parameters" : favourites} only %}
            </div>
        {% endif %}
       {% include '@CJWConfigProcessor/line/recursive_param_resolution/_recursive_param_resolver.html.twig' ignore missing with {"parameters" : parameterList} only %}
    </div>
{% endblock %}

{% block line_template_javascripts %}
    <script src={{ asset("bundles/cjwconfigprocessor/assets/js/app.js") }}></script>
    <script src={{ asset("bundles/cjwconfigprocessor/assets/js/ParameterDisplay.js") }}></script>
    <script src={{ asset("bundles/cjwconfigprocessor/assets/js/ParameterBranchDisplay.js") }}></script>
    <script src={{ asset("bundles/cjwconfigprocessor/assets/js/ParameterLocationRetrieval.js") }}></script>
    <script src={{ asset("bundles/cjwconfigprocessor/assets/js/DownloadParametersUtility.js") }}></script>
    <script src={{ asset("bundles/cjwconfigprocessor/assets/js/FavourButtonUtility.js") }}></script>
    <script src={{ asset("bundles/cjwconfigprocessor/assets/js/CopyButtonUtility.js") }}></script>
{% endblock %}
